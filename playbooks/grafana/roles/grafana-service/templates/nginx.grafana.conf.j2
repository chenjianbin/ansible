upstream grafana_backend {
	server 127.0.0.1:3000;
	keepalive 32;
}

server {
    listen 80;
    server_name {{ grafana_server_hostname }};

    location / {
        proxy_pass http://grafana_backend;
    }

    access_log {{ nginx_log_dir }}/{{ grafana_server_hostname }}.access.log  main_product;
    error_log {{ nginx_log_dir }}/{{ grafana_server_hostname }}.error.log;
}
