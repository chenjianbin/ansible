upstream gogs_backend {
	server 127.0.0.1:3000;
	keepalive 32;
}

server {
    listen 80;
    server_name {{ gogs_domain }};

    location / {
        proxy_pass http://gogs_backend;
    }

    access_log {{ nginx_log_dir }}/{{ gogs_domain }}.access.log  main_product;
    error_log {{ nginx_log_dir }}/{{ gogs_domain }}.error.log;
}
