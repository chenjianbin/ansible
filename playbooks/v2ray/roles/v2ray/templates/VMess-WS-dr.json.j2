{
  "inbounds": [
    {
      "tag": "VMess-WS-{{subdomain}}-dr.{{ zone }}.json",
      "port": {{ dr_port }},
      "listen": "0.0.0.0",
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "{{ uuid }}"
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "security": "none",
        "wsSettings": {
          "path": "/wsv3",
          "headers": {
            "Host": "{{ subdomain }}-dr.{{ zone }}"
          }
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    }
  ]
}
