{% if mode == 'master' %}
[mysqld]
{% else %}
[mysqld@{{ mysql_port }}]
{% endif %}
###### Mysql Global ######
bind_address        = 0.0.0.0
port                = {{ mysql_port }}
socket              = {{ mysql_datadir }}/{{ mysql_port }}/mysql.sock 
user                = {{ mysql_os_user.name }}
mysqlx_bind_address = 127.0.0.1
mysqlx_port         = {{ mysql_port }}0
mysqlx_socket       = {{ mysql_datadir }}/{{ mysql_port }}/mysqlx.sock
#启用admin_port，连接数爆满等紧急情况下给管理员留个后门
admin_address       = 127.0.0.1
admin_port          = {{ mysql_port }}2
datadir             = {{ mysql_datadir }}/{{ mysql_port }}/data
pid_file            = {{ mysql_datadir }}/{{ mysql_port }}/mysql.pid
log_error           = {{ mysql_datadir }}/{{ mysql_port }}/logs/errorlog/mysql-error.log
slow_query_log_file = {{ mysql_datadir }}/{{ mysql_port }}/logs/slowlog/mysql-slow.log
slow_query_log      = 1
long_query_time     = 0.1
#log_queries_not_using_indexes    = 1

skip_name_resolve                 = 1
explicit_defaults_for_timestamp   = 1
default_storage_engine            = InnoDB
log_timestamps                    = SYSTEM
character_set_server              = utf8mb4
#character_set_client             = utf8mb4
#character_set_connection         = utf8mb4
#character_set_results            = utf8mb4
default_time_zone                 = "+8:00"
sql_mode                          = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

max_connect_errors           = 100000
max_connections              = 1024
thread_cache_size            = 512
table_open_cache             = 1024
back_log                     = 1024
max_length_for_sort_data     = 1024 
max_sort_length              = 1024 
sort_buffer_size             = 4M
join_buffer_size             = 4M
read_rnd_buffer_size         = 4M
tmp_table_size               = 32M
max_heap_table_size          = 32M
max_allowed_packet           = 32M
interactive_timeout          = 31536000
wait_timeout                 = 31536000

### Binlog ###
server_id                    = "{{ 10000000 | random }}"
sync_binlog                  = 1
gtid_mode                    = ON
enforce_gtid_consistency     = ON
binlog_expire_logs_seconds   = 604800
binlog_cache_size            = 8M
max_binlog_cache_size        = 10G
max_binlog_size              = 1G
log_bin                      = {{ mysql_datadir }}/{{ mysql_port }}/logs/binlog/mysql-bin
log_bin_index                = {{ mysql_datadir }}/{{ mysql_port }}/logs/binlog/mysql-bin.index

###  Slave  ###
{% if mode == 'master' %}
read_only                    = 0
{% else %}
read_only                    = 1
{% endif %}
auto_increment_offset        = 1
auto_increment_increment     = 1
log_replica_updates          = 1      
#skip_replica_start           = 1
replica_net_timeout          = 60
sync_source_info             = 100000
sync_relay_log               = 100000
relay_log                    = {{ mysql_datadir }}/{{ mysql_port }}/logs/relaylog/mysql-relay-bin
relay_log_index              = {{ mysql_datadir }}/{{ mysql_port }}/logs/relaylog/mysql-relay-bin.index
replica_parallel_workers = 4
relay_log_recovery     = 1

###### Myisam ######
key_buffer_size                       = 16M
read_buffer_size                      = 1M
bulk_insert_buffer_size               = 64M 
myisam_sort_buffer_size               = 128M

###### Innodb ######
transaction_isolation                 = READ-COMMITTED
innodb_data_file_path                 = ibdata1:1024M:autoextend
{% if mode == 'master' %}
innodb_buffer_pool_size               = {{ ansible_memtotal_mb // 128 // 2 * 128 }}M
{% else %}
innodb_buffer_pool_size               = 512M
{% endif %}
innodb_redo_log_capacity              = 2G
innodb_log_files_in_group             = 2
innodb_log_buffer_size                = 8M
innodb_file_per_table                 = 1
innodb_stats_persistent               = 1
innodb_flush_log_at_trx_commit        = 1
innodb_max_dirty_pages_pct            = 75
innodb_lock_wait_timeout              = 120
innodb_print_all_deadlocks            = 1
innodb_buffer_pool_load_at_startup    = 1
innodb_buffer_pool_dump_at_shutdown   = 1
innodb_flush_method                   = O_DIRECT
innodb_doublewrite                    = 1
innodb_io_capacity                    = 2000

