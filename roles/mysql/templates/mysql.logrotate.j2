{{ ansible_managed | comment }}

{{ mysql_instance_dir }}/logs/errorlog/*.log {{ mysql_instance_dir }}/logs/slowlog/*.log {
    create 0600 {{ mysql_os_user }} {{ mysql_os_group }}
    daily
    rotate 15
    missingok
    notifempty
    compress
    
    sharedscripts
    postrotate
        mysqladmin flush-logs -S {{ mysql_instance_dir }}/mysql.sock
    endscript
}
